{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": ".",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "strict": false,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "src/**/*.story.tsx",
    "src/**/*.test.tsx"
  ]
}
